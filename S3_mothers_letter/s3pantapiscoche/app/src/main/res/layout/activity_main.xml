<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_dia_madre_2"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frameCorazones"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="40sp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tituloFeliz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="FELIZ DIA DE LA"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tituloMadre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:text="Madre"
                android:textColor="#E01B1B"
                android:textSize="80sp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/corazon_2" />

            <TextView
                android:id="@+id/textoFrase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="Tu amor desinteresado y tu dedicación infinita han sido un faro en los momentos oscuros y una fuente constante de alegría y felicidad"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:gravity="center"
                android:orientation="vertical">

                <!-- EditText para nombre -->
                <EditText
                    android:id="@+id/editTextNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/edittext_background"
                    android:hint="Ingresa el nombre"
                    android:padding="12dp"
                    android:textColor="#000000"
                    android:textColorHint="#777777" />

                <!-- Botón para mostrar mensaje -->
                <Button
                    android:id="@+id/btnMostrarMensaje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="#E01B1B"
                    android:paddingHorizontal="24dp"
                    android:text="Mostrar mensaje"
                    android:textColor="#FFFFFF" />


                <TextView
                    android:id="@+id/textViewMensaje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="cursive"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>